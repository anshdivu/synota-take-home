{
  "name": "synota-take-home",
  "version": "1.0.0-alpha",
  "author": "Diviyansh Bhatnagar <ansh.divu@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18",
    "yarn": ">=1.22"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "rm -rf dist && yarn tsc",
    "start": "node ./dist/bin/www",
    "dev": "ts-node -r dotenv/config bin/www",
    "dev:watch": "nodemon --watch \"src/**\" --watch \"bin/**\" --watch \".env\" --ext \"ts,json\" --exec \"yarn dev\"",
    "dev:db": "postgres -D /usr/local/var/postgresql@14",
    "db:init": "prisma migrate dev --name init",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.0",
    "@prisma/client": "4.8.1",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@vitest/coverage-c8": "^0.27.1",
    "dotenv": "^16.0.3",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "2.8.3",
    "prisma": "^4.8.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vitest": "^0.27.1"
  }
}
